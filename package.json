{
  "name": "monorepo",
  "version": "0.0.1",
  "description": "Monorepo with Electron and React applications",
  "private": true,
  "packageManager": "pnpm@10.26.1",
  "author": "example.com",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "eslint --cache . --fix",
    "lint:ci": "eslint --cache .",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "format": "prettier --write .",
    "format:ci": "prettier --check .",
    "electron:dev": "turbo run dev --filter=@monorepo/react-app --filter=my-electron-app",
    "electron:build": "turbo run build --filter=@monorepo/react-app --filter=my-electron-app",
    "build:electron": "pnpm --filter my-electron-app build:win && pnpm --filter my-electron-app build:mac",
    "react:dev": "turbo run dev --filter=@monorepo/react-app",
    "react:build": "turbo run build --filter=@monorepo/react-app",
    "download-ytdlp": "./scripts/download-ytdlp.sh"
  },
  "devDependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "turbo": "^2.7.1",
    "typescript": "^5.9.3"
  }
}
