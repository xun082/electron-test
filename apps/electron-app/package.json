{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "我的 Electron 应用程序",
  "main": "./out/main/index.js",
  "author": "您的名字",
  "homepage": "https://github.com/web-infra-dev/rspack",
  "scripts": {
    "format": "prettier --write .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "pnpm run typecheck:node && pnpm run typecheck:web",
    "build:main": "RSPACK_TARGET=main NODE_ENV=production rspack build",
    "build:preload": "RSPACK_TARGET=preload NODE_ENV=production rspack build",
    "build:electron": "pnpm run build:main && pnpm run build:preload",
    "dev:main": "RSPACK_TARGET=main NODE_ENV=development rspack build --watch",
    "dev:preload": "RSPACK_TARGET=preload NODE_ENV=development rspack build --watch",
    "dev:build": "RSPACK_TARGET=main NODE_ENV=development rspack build && RSPACK_TARGET=preload NODE_ENV=development rspack build",
    "dev": "pnpm run dev:build && pnpm run dev:main & pnpm run dev:preload & sleep 2 && electron .",
    "start": "pnpm run build:electron && electron .",
    "build": "pnpm run typecheck && pnpm run build:electron",
    "build:react": "pnpm --filter @monorepo/react-app build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "pnpm run build && electron-builder --dir",
    "build:win": "pnpm run build && electron-builder --win",
    "build:mac": "pnpm run build:electron && electron-builder --mac --x64 --arm64",
    "build:mac-intel": "pnpm run build:electron && electron-builder --mac --x64",
    "build:mac-arm": "pnpm run build:electron && electron-builder --mac --arm64",
    "build:linux": "pnpm run build:electron && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "electron-updater": "^6.6.2",
    "@monorepo/electron-core": "workspace:*",
    "@monorepo/electron-window": "workspace:*",
    "@monorepo/electron-ipc": "workspace:*"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@rspack/cli": "^1.0.0",
    "@rspack/core": "^1.0.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
